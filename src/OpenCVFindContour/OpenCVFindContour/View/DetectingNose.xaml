<UserControl x:Class="OpenCVFindContour.View.DetectingNose"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:cnvt="clr-namespace:OpenCVFindContour.Converter"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OpenCVFindContour.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:OpenCVFindContour.ViewModel"
             d:DataContext="{d:DesignInstance vm:DetectingNoseViewModel}"
             d:DesignHeight="480"
             d:DesignWidth="640"
             mc:Ignorable="d">
    <Grid x:Name="grid">
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Panel.ZIndex="1"
                   Foreground="White"
                   Text="DetectingNose" />
        <Image Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}"
               Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}"
               Source="{Binding PrintMat, Converter={cnvt:MatToWriteableBitmapConverter}, ConverterParameter=Bgr24}"
               Stretch="Fill" />
    </Grid>
</UserControl>
