<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cnvt="clr-namespace:OhMyRudolph.Wpf.Core.Converters;assembly=OhMyRudolph.Wpf.Core"
                    xmlns:local="clr-namespace:OhMyRudolph.Wpf.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OhMyRudolph.Wpf.Core;component/ControlTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type local:PhotoGrayBackButton}">
        <Setter Property="BorderBrush" Value="{StaticResource Brush_BorderBrush_PhotoGrayBackButton}" />
        <Setter Property="Background" Value="{StaticResource Brush_Background_PhotoGrayBackButton}" />
        <Setter Property="BorderThickness" Value="{StaticResource Thickness_PhotoGrayBackButton}" />
        <Setter Property="FontFamily" Value="{StaticResource GlobalFont}" />
        <Setter Property="FontSize" Value="{StaticResource FontSize_PhotoGrayBackButton}" />
        <Setter Property="FontWeight" Value="{StaticResource FontWeight_PhotoGrayBackButton}" />
        <Setter Property="Foreground" Value="{StaticResource Brush_Foreground_PhotoGrayBackButton}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:PhotoGrayBackButton}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{StaticResource CornerRadius_PhotoGrayBackButton}">
                        <StackPanel HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                            <TextBlock Margin="0,0,5,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="{TemplateBinding FontSize,
                                                                  Converter={cnvt:FontSizeStaticIncrementConverter},
                                                                  ConverterParameter={StaticResource BackSymbol_PhotoGrayBackButton}}"
                                       FontWeight="Bold"
                                       Text="〈" />
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="{TemplateBinding FontSize}"
                                       Text="뒤로가기" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>