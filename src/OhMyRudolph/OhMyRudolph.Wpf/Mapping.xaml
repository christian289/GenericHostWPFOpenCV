<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:uc="clr-namespace:OhMyRudolph.Wpf.UserControls;assembly=OhMyRudolph.Wpf.UserControls">
    <DataTemplate DataType="{x:Type uc:MainPageViewModel}">
        <uc:MainPageView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type uc:SelectModeViewModel}">
        <uc:SelectModeView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type uc:VideoViewModel}">
        <uc:VideoView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type uc:PhotoViewModel}">
        <uc:PhotoView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type uc:ReadyScreenViewModel}">
        <uc:ReadyScreen />
    </DataTemplate>
</ResourceDictionary>