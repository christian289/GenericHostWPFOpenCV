<UserControl x:Class="OhMyRudolph.Wpf.UserControls.SelectModeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:OhMyRudolph.Wpf.Controls;assembly=OhMyRudolph.Wpf.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:OhMyRudolph.Wpf.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:Background="Black"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Background="{Binding Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=Window}}">
        <Grid.Resources>
            <Style TargetType="Control">
                <Setter Property="Margin" Value="10" />
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="0.15*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   FontFamily="Malgun Gothic"
                   FontSize="20"
                   FontWeight="DemiBold"
                   Foreground="#FFFFFFFF"
                   Text="모드를 선택해주세요" />
        <UniformGrid Grid.Row="1"
                     Margin="10"
                     Columns="2">
            <c:PhotoGrayModeSelectionCardButton Width="300"
                                                Margin="0,0,4,0"
                                                HorizontalAlignment="Right"
                                                Background="#FFFFFFFF"
                                                Command="{Binding NavigatePhotoViewCommand}"
                                                InternalMargin="10"
                                                ItemString="파일 업로드"
                                                ItemStringForeground="#FF131313">
                <iconPacks:PackIconMaterialDesign Kind="AttachFile" />
            </c:PhotoGrayModeSelectionCardButton>
            <c:PhotoGrayModeSelectionCardButton Width="300"
                                                Margin="4,0,0,0"
                                                HorizontalAlignment="Left"
                                                Background="#FF131313"
                                                Command="{Binding NavigateVideoViewCommand}"
                                                InternalMargin="10,10,10,10"
                                                ItemString="라이브 스냅샷 촬영"
                                                ItemStringForeground="#FFFFFFFF">
                <iconPacks:PackIconMaterialDesign Foreground="White" Kind="CameraAlt" />
            </c:PhotoGrayModeSelectionCardButton>
        </UniformGrid>
        <StackPanel Grid.Row="2"
                    Margin="10,0,0,0"
                    Orientation="Horizontal">
            <c:PhotoGrayBackButton Width="150"
                                   Height="40"
                                   Command="{Binding NavigateMainPageCommand}" />
        </StackPanel>
    </Grid>
</UserControl>
