<UserControl x:Class="OhMyRudolph.Wpf.UserControls.VideoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:OhMyRudolph.Wpf.Controls;assembly=OhMyRudolph.Wpf.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:OhMyRudolph.Wpf.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance local:VideoViewModel}"
             d:DesignHeight="720"
             d:DesignWidth="1280"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OhMyRudolph.Wpf.Core;component/ControlTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <local:DetectingNoseView Width="{StaticResource Width_DetectingNoseView}"
                                 Height="{StaticResource Height_DetectingNoseView}"
                                 DataContext="{Binding DetectingNoseViewModel}" />
        <UniformGrid x:Name="ButtonSet"
                     Width="{StaticResource Width_ButtonSet}"
                     Height="{StaticResource Height_ButtonSet}"
                     Margin="{StaticResource Margin_ButtonSet}"
                     HorizontalAlignment="{StaticResource HorizontalAlignment_ButtonSet}"
                     VerticalAlignment="{StaticResource VerticalAlignment_ButtonSet}"
                     Columns="3">
            <c:PhotoGrayEffectSelectionButton Command="{Binding NoEffectCommand}">
                <iconPacks:PackIconTypicons Kind="Cancel" />
            </c:PhotoGrayEffectSelectionButton>
            <c:PhotoGrayEffectSelectionButton Command="{Binding DrawingRudolphEffectCommand}">
                <Ellipse Width="30"
                         Height="30"
                         Fill="Red" />
            </c:PhotoGrayEffectSelectionButton>
            <c:PhotoGrayEffectSelectionButton Command="{Binding OverlayDeadpoolEffectCommand}">
                <Image x:Name="deadpoolSymbol" />
            </c:PhotoGrayEffectSelectionButton>
        </UniformGrid>
    </Grid>
</UserControl>
