<UserControl x:Class="OhMyRudolph.Wpf.UserControls.PhotoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c="clr-namespace:OhMyRudolph.Wpf.Controls;assembly=OhMyRudolph.Wpf.Controls"
             xmlns:cnvt="clr-namespace:OhMyRudolph.Wpf.Core.Converters;assembly=OhMyRudolph.Wpf.Core"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:local="clr-namespace:OhMyRudolph.Wpf.UserControls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DataContext="{d:DesignInstance local:PhotoViewModel}"
             d:DesignHeight="720"
             d:DesignWidth="1280"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/OhMyRudolph.Wpf.Core;component/ControlTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0"
              Grid.Column="0"
              Grid.ColumnSpan="2"
              Margin="{StaticResource Margin_PageTitle}">
            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Malgun Gothic"
                       FontSize="24"
                       FontWeight="DemiBold"
                       Foreground="#FFFFFFFF"
                       Text="사진 효과 적용" />
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="0"
              Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    Background="#FF202020"
                    BorderBrush="#FF404040"
                    BorderThickness="2"
                    CornerRadius="10">
                <Grid>
                    <TextBlock Margin="0,10,0,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               FontFamily="Malgun Gothic"
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="#FFFFFFFF"
                               Text="원본 이미지" />

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{Binding OriginalImage, Converter={cnvt:NullToVisibilityConverter}, ConverterParameter=Inverse}">
                        <iconPacks:PackIconLucide Width="80"
                                                  Height="80"
                                                  HorizontalAlignment="Center"
                                                  Foreground="#FF606060"
                                                  Kind="ImagePlus" />
                        <TextBlock Margin="0,10,0,0"
                                   HorizontalAlignment="Center"
                                   FontFamily="Malgun Gothic"
                                   FontSize="16"
                                   Foreground="#FF606060"
                                   Text="이미지를 선택해주세요" />
                    </StackPanel>

                    <Image Margin="10,40,10,10"
                           Source="{Binding OriginalImage, Converter={cnvt:MatToWriteableBitmapConverter}, ConverterParameter=Bgr24}"
                           Stretch="Uniform"
                           Visibility="{Binding OriginalImage, Converter={cnvt:NullToVisibilityConverter}}" />
                </Grid>
            </Border>

            <Border Grid.Column="2"
                    Background="#FF202020"
                    BorderBrush="#FF404040"
                    BorderThickness="2"
                    CornerRadius="10">
                <Grid>
                    <TextBlock Margin="0,10,0,0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Top"
                               FontFamily="Malgun Gothic"
                               FontSize="16"
                               FontWeight="Medium"
                               Foreground="#FFFFFFFF"
                               Text="효과 적용된 이미지" />

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Visibility="{Binding ProcessedImage, Converter={cnvt:NullToVisibilityConverter}, ConverterParameter=Inverse}">
                        <iconPacks:PackIconPicolIcons Width="80"
                                                      Height="80"
                                                      HorizontalAlignment="Center"
                                                      Foreground="#FF606060"
                                                      Kind="ImageEdit" />
                        <TextBlock Margin="0,10,0,0"
                                   HorizontalAlignment="Center"
                                   FontFamily="Malgun Gothic"
                                   FontSize="16"
                                   Foreground="#FF606060"
                                   Text="효과를 적용해보세요" />
                    </StackPanel>

                    <Image Margin="10,40,10,10"
                           Source="{Binding ProcessedImage, Converter={cnvt:MatToWriteableBitmapConverter}, ConverterParameter=Bgr24}"
                           Stretch="Uniform"
                           Visibility="{Binding ProcessedImage, Converter={cnvt:NullToVisibilityConverter}}" />
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1"
              Grid.RowSpan="2"
              Grid.Column="1"
              Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  효과 선택 버튼들  -->
            <UniformGrid Grid.Row="1"
                         Grid.RowSpan="2"
                         Rows="4">
                <UniformGrid.Resources>
                    <Style TargetType="{x:Type c:PhotoGrayEffectSelectionButton}">
                        <Setter Property="Width" Value="{StaticResource Width_EffectButtonSetItem}" />
                        <Setter Property="Height" Value="{StaticResource Height_EffectButtonSetItem}" />
                        <Setter Property="Margin" Value="{StaticResource Margin_EffectButtonSetItem}" />
                        <Setter Property="Background" Value="{StaticResource Background_EffectButtonSetItem}" />
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush_EffectButtonSetItem}" />
                        <Setter Property="BorderThickness" Value="{StaticResource BorderThickness_EffectButtonSetItem}" />
                    </Style>
                </UniformGrid.Resources>
                <c:PhotoGrayEffectSelectionButton Command="{Binding LoadImageCommand}">
                    <iconPacks:PackIconMaterialDesign Width="{StaticResource Width_EffectButtonSetItemContent}"
                                                      Height="{StaticResource Height_EffectButtonSetItemContent}"
                                                      Margin="{StaticResource Margin_EffectButtonSetItemContent}"
                                                      HorizontalAlignment="Center"
                                                      Foreground="White"
                                                      Kind="FolderOpen" />
                </c:PhotoGrayEffectSelectionButton>
                <c:PhotoGrayEffectSelectionButton Command="{Binding NoEffectCommand}">
                    <iconPacks:PackIconTypicons Width="{StaticResource Width_EffectButtonSetItemContent}"
                                                Height="{StaticResource Height_EffectButtonSetItemContent}"
                                                Margin="{StaticResource Margin_EffectButtonSetItemContent}"
                                                Foreground="White"
                                                Kind="Cancel" />
                </c:PhotoGrayEffectSelectionButton>

                <c:PhotoGrayEffectSelectionButton Command="{Binding ApplyDrawingRudolphEffectCommand}">
                    <Ellipse Width="{StaticResource Width_EffectButtonSetItemContent}"
                             Height="{StaticResource Height_EffectButtonSetItemContent}"
                             Margin="{StaticResource Margin_EffectButtonSetItemContent}"
                             Fill="Red" />
                </c:PhotoGrayEffectSelectionButton>

                <c:PhotoGrayEffectSelectionButton Command="{Binding ApplyOverlayDeadpoolEffectCommand}">
                    <Image Width="{StaticResource Width_EffectButtonSetItemContent}"
                           Height="{StaticResource Height_EffectButtonSetItemContent}"
                           Margin="{StaticResource Margin_EffectButtonSetItemContent}"
                           Source="/OhMyRudolph.Wpf.UserControls;component/deadpool.png" />
                </c:PhotoGrayEffectSelectionButton>
            </UniformGrid>
        </Grid>

        <Grid Grid.Row="2" Margin="{StaticResource Margin_BottomButtonSet}">
            <StackPanel Grid.Row="1"
                        HorizontalAlignment="{StaticResource HorizontalAlignment_BottomButtonSet}"
                        Orientation="{StaticResource Orientation_BottomButtonSet}">
                <c:PhotoGrayBackButton Width="{StaticResource Width_BottomButtonSet}"
                                       Height="{StaticResource Height_BottomButtonSet}"
                                       Margin="{StaticResource Interval_BottomButtonSet}"
                                       Command="{Binding NavigateSelectModeCommand}" />

                <c:PhotoGrayMainPageButton Width="{StaticResource Width_BottomButtonSet}"
                                           Height="{StaticResource Height_BottomButtonSet}"
                                           Command="{Binding SaveImageCommand}"
                                           Content="이미지 저장"
                                           IsEnabled="{Binding ProcessedImage, Converter={cnvt:NullToBooleanConverter}}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
