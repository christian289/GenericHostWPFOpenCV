<UserControl x:Class="OpenCVFindContour.View.FindContour_ApproxPolyDP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OpenCVFindContour.View"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="userControl"
             d:DesignHeight="480"
             d:DesignWidth="640"
             DataContext="{Binding Source={StaticResource Locator}, Path=FindContour_ApproxPolyDPViewModel}"
             mc:Ignorable="d">
    <Grid x:Name="grid">
        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Panel.ZIndex="1"
                   Foreground="White"
                   Text="ApproxPolyDP" />
        <Image Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}"
               Height="{Binding ActualHeight, ElementName=grid, Mode=OneWay}"
               Source="{Binding PrintMat, Converter={StaticResource MatToWriteableBitmapConverter}, ConverterParameter=Bgr24}"
               Stretch="Fill" />
    </Grid>
</UserControl>
