<Window x:Class="OpenCVFindContour.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cnvt="clr-namespace:OpenCVFindContour.Converter"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:OpenCVFindContour.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OpenCVFindContour.ViewModel"
        Title="MainWindow"
        Width="1920"
        Height="950"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" MinHeight="100" />
        </Grid.RowDefinitions>
        <ItemsControl Grid.Row="0" ItemsSource="{Binding ActivatedCameraHandleCollection}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton Content="{Binding}" GroupName="ActivatedCameras">
                        <RadioButton.ContentTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" />
                            </DataTemplate>
                        </RadioButton.ContentTemplate>
                        <RadioButton.IsChecked>
                            <MultiBinding Converter="{cnvt:MultiEqualsConverter}" Mode="TwoWay">
                                <Binding Path="DataContext.SelectedCameraHandleService">
                                    <Binding.RelativeSource>
                                        <RelativeSource AncestorType="{x:Type Window}" Mode="FindAncestor" />
                                    </Binding.RelativeSource>
                                </Binding>
                                <Binding Path="." />
                            </MultiBinding>
                        </RadioButton.IsChecked>
                    </RadioButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <UniformGrid Grid.Row="1" Columns="3">
            <local:Canny DataContext="{Binding CannyViewModel}" />
            <local:FindContour_ApproxPolyDP DataContext="{Binding FindContour_ApproxPolyDPViewModel}" />
            <local:FindContour_MinAreaRect DataContext="{Binding FindContour_MinAreaRectViewModel}" />
        </UniformGrid>
        <UniformGrid Grid.Row="2" Columns="2">
            <RadioButton Command="{Binding CameraStartCommand}"
                         Content="카메라 연결 시작"
                         GroupName="CameraControl"
                         IsChecked="{Binding IsCameraStartButtonEnabled, Mode=TwoWay}"
                         Style="{StaticResource ButtonLikeRadioButton}" />
            <RadioButton d:IsChecked="True"
                         Command="{Binding CameraStopCommand}"
                         Content="카메라 연결 종료"
                         GroupName="CameraControl"
                         IsChecked="{Binding IsCameraStopButtonEnabled, Mode=TwoWay}"
                         Style="{StaticResource ButtonLikeRadioButton}" />
        </UniformGrid>
    </Grid>
</Window>
