<Window x:Class="OpenCVFindContour.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:beha="clr-namespace:OpenCVFindContour.Behaviors"
        xmlns:cnvt="clr-namespace:OpenCVFindContour.Converter"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:OpenCVFindContour.View"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:OpenCVFindContour.ViewModel"
        Title="MainWindow"
        Width="800"
        Height="600"
        d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" MinHeight="80" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Margin="10,0,0,0"
                       VerticalAlignment="Center"
                       Text="카메라 선택: " />
            <ComboBox Margin="0,5,0,5"
                      VerticalContentAlignment="Center"
                      DisplayMemberPath="DisplayName"
                      IsEnabled="{Binding IsCameraStartButtonEnabled}"
                      ItemsSource="{Binding ActivatedCameraHandleCollection}"
                      SelectedItem="{Binding SelectedCameraHandleService}" />
        </StackPanel>
        <Grid Grid.Row="1">
            <local:Normal DataContext="{Binding NormalViewModel}">
                <i:Interaction.Behaviors>
                    <beha:GetActualHeightBehavior ActualHeight="{Binding NormalViewActualHeight, Mode=OneWayToSource}" />
                    <beha:GetActualWidthBehavior ActualWidth="{Binding NormalViewActualWidth, Mode=OneWayToSource}" />
                </i:Interaction.Behaviors>
            </local:Normal>
        </Grid>
        <!--<UniformGrid Grid.Row="1" Columns="3">
            <local:Canny DataContext="{Binding CannyViewModel}">
                <i:Interaction.Behaviors>
                    <beha:GetActualHeightBehavior ActualHeight="{Binding CannyViewActualHeight, Mode=OneWayToSource}" />
                    <beha:GetActualWidthBehavior ActualWidth="{Binding CannyViewActualWidth, Mode=OneWayToSource}" />
                </i:Interaction.Behaviors>
            </local:Canny>
            <local:FindContour_ApproxPolyDP DataContext="{Binding FindContour_ApproxPolyDPViewModel}">
                <i:Interaction.Behaviors>
                    <beha:GetActualHeightBehavior ActualHeight="{Binding ApproxPolyDPViewActualHeight, Mode=OneWayToSource}" />
                    <beha:GetActualWidthBehavior ActualWidth="{Binding ApproxPolyDPViewActualWidth, Mode=OneWayToSource}" />
                </i:Interaction.Behaviors>
            </local:FindContour_ApproxPolyDP>
            <local:FindContour_MinAreaRect DataContext="{Binding FindContour_MinAreaRectViewModel}">
                <i:Interaction.Behaviors>
                    <beha:GetActualHeightBehavior ActualHeight="{Binding MinAreaRectViewActualHeight, Mode=OneWayToSource}" />
                    <beha:GetActualWidthBehavior ActualWidth="{Binding MinAreaRectViewActualWidth, Mode=OneWayToSource}" />
                </i:Interaction.Behaviors>
            </local:FindContour_MinAreaRect>
        </UniformGrid>-->
        <UniformGrid Grid.Row="2" Columns="2">
            <RadioButton Command="{Binding CameraStartCommand}"
                         Content="카메라 연결 시작"
                         GroupName="CameraControl"
                         IsChecked="{Binding IsCameraStartButtonEnabled, Mode=TwoWay}"
                         Style="{StaticResource ButtonLikeRadioButton}" />
            <RadioButton d:IsChecked="True"
                         Command="{Binding CameraStopCommand}"
                         Content="카메라 연결 종료"
                         GroupName="CameraControl"
                         IsChecked="{Binding IsCameraStopButtonEnabled, Mode=TwoWay}"
                         Style="{StaticResource ButtonLikeRadioButton}" />
        </UniformGrid>
    </Grid>
</Window>
